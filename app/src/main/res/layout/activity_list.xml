                android:background="@drawable/emoji_background">

                <ImageButton
                    android:id="@+id/shush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shushing_face_svgrepo_com"
                    android:background="@color/transparent"
                    android:onClick="shushingFaceEmogiClicked"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shush"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Sleep Emoji -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/emoji_background">

                <ImageButton
                    android:id="@+id/sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sleeping_face_svgrepo_com"
                    android:background="@color/transparent"
                    android:onClick="sleepingEmogiClicked"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Smile Emoji -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/emoji_background">

                <ImageButton
                    android:id="@+id/smile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slightly_smiling_face_svgrepo_com"
                    android:background="@color/transparent"
                    android:onClick="SmileEmogiClicked"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smile"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
