                    android:src="@drawable/pouting_face_svgrepo_com"
                    android:background="@color/transparent"
                    android:onClick="poutingFaceEmogiClicked"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pout"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Roll Laugh Emoji -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/emoji_background">

                <ImageButton
                    android:id="@+id/rollLough"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rolling_on_the_floor_laughing_svgrepo_com"
                    android:background="@color/transparent"
                    android:onClick="rollingLaughungEmogiClicked"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll Laugh"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Shush Emoji -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
